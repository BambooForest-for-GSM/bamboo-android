<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/login_dialog_password_edittext"
        android:layout_height="wrap_content"
        tools:context=".view.activity.signin.LoginDialog">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_logo_icon" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인하기"
            android:layout_below="@id/logo_img"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:textSize="15sp"
            android:textColor="#C4C4C4"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_below="@id/login_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/who_login_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자님 환영합니다!"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nanumsquareround_otfb"
                android:textSize="17sp"
                android:textColor="@color/main_color" />

            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호를 입력해주세요."
                android:background="@drawable/login_dialog_password_edittext"
                android:fontFamily="@font/nanumsquareround_otfb"
                android:padding="12dp"
                android:elevation="10dp"
                android:textColorHint="#C4C4C4"
                android:textSize="13sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:layout_marginTop="57dp"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_dialog_login_btn"
                android:textColor="@color/white"
                android:fontFamily="@font/nanumsquareround_otfb" />

        </LinearLayout>

    </RelativeLayout>
</layout>
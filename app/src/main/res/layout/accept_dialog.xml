<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_dialog_password_edittext">

            <ImageView

                android:id="@+id/logo_img"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_logo_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="20dp" />

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo_img"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanumsquareround_otfb"
                android:text="관리자 세션"
                android:textColor="#C4C4C4"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo_img" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_txt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/nanumsquareround_otfb"
                    android:text="제목"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/update_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/login_dialog_password_edittext"
                    android:elevation="10dp"
                    android:fontFamily="@font/nanumsquareround_otfb"
                    android:hint="수정할 제목을 입력해 주세요."
                    android:padding="10dp"
                    android:textColorHint="#C4C4C4"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/nanumsquareround_otfb"
                    android:text="내용"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/update_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/login_dialog_password_edittext"
                    android:elevation="10dp"
                    android:fontFamily="@font/nanumsquareround_otfb"
                    android:hint="수정할 제목을 입력해 주세요."
                    android:padding="10dp"
                    android:textColorHint="#C4C4C4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/update_tag_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/nanumsquareround_otfb"
                    android:text="태그를 선택해 주세요"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />


                <Spinner
                    android:id="@+id/update_tag"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:entries="@array/PostCreateTagList"
                    android:hint="태그"
                   />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/accept_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/login_dialog_login_btn"
                    android:fontFamily="@font/nanumsquareround_otfb"
                    android:text="수정하기"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

